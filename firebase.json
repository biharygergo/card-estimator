{
  "hosting": [
    {
      "target": "estimator",
      "public": "dist/estimator/browser",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "trailingSlash": false,
      "rewrites": [
        {
          "source": "/api/zoomHome",
          "function": "zoomHome",
          "region": "us-central1"
        },
        {
          "source": "/api/uninstallZoomApp",
          "function": "uninstallZoomApp",
          "region": "us-central1"
        },
        {
          "source": "/api/installZoomApp",
          "function": "installZoomApp",
          "region": "us-central1"
        },
        {
          "source": "/api/authorizeZoomApp",
          "function": "authorizeZoomApp",
          "region": "us-central1"
        },
        {
          "source": "/api/generateCodeChallenge",
          "function": "generateCodeChallenge",
          "region": "us-central1"
        },
        {
          "source": "/api/inClientOnAuthorized",
          "function": "inClientOnAuthorized",
          "region": "us-central1"
        },
        {
          "source": "/api/startGoogleAuth",
          "function": "startGoogleAuth",
          "region": "us-central1"
        },
        {
          "source": "/api/onZoomAuthResponseRedirectToGoogle",
          "function": "onZoomAuthResponseRedirectToGoogle",
          "region": "us-central1"
        },
        {
          "source": "/api/onGoogleAuthResponseDeeplink",
          "function": "onGoogleAuthResponseDeeplink",
          "region": "us-central1"
        },
        {
          "source": "/api/giveFeedback",
          "function": "giveFeedback",
          "region": "us-central1"
        },
        {
          "source": "/api/reportAnIssue",
          "function": "reportAnIssue",
          "region": "us-central1"
        },
        {
          "source": "/api/sendEmail",
          "function": "sendEmail",
          "region": "us-central1"
        },
        {
          "source": "/api/acceptOrganizationInvitation",
          "function": "acceptOrganizationInvitation",
          "region": "us-central1"
        },
        {
          "source": "/api/startJiraAuth",
          "function": "startJiraAuth",
          "region": "us-central1"
        },
        {
          "source": "/api/onJiraAuthResponse",
          "function": "onJiraAuthResponse",
          "region": "us-central1"
        },
        {
          "source": "/api/safeRedirect",
          "function": "safeRedirect",
          "region": "us-central1"
        },
        {
          "source": "/api/startTeamsGoogleAuth",
          "function": "startTeamsGoogleAuth",
          "region": "us-central1"
        },
        {
          "source": "/api/onTeamsGoogleAuthResult",
          "function": "onTeamsGoogleAuthResult",
          "region": "us-central1"
        },
        {
          "source": "/zoomverify/verifyzoom",
          "destination": "/assets/verifyzoom.html"
        },
        {
          "source": "/zoomverify/verifyzoom.html",
          "destination": "/assets/verifyzoom.html"
        },
        {
          "source": "/room/*",
          "destination": "/room/index.html"
        },
        {
          "source": "/",
          "destination": "/index.html"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "headers": [
        {
          "source": "**",
          "headers": [
            {
              "key": "X-Content-Type-Options",
              "value": "nosniff"
            },
            {
              "key": "Content-Security-Policy",
              "value": "default-src 'self' 'unsafe-inline' 'unsafe-eval' 'nonce-jafiansf83nasdfn38asdnf3' 'nonce-hsjdf73bfasdjfb33fbasjd' 'nonce-hjkjsdf93aasdjfb33fbasjd' *.planningpoker.live https://res.cloudinary.com https://us-central1-card-estimator.cloudfunctions.net https://us-central1-planning-poker-test-dc808.cloudfunctions.net https://card-estimator.firebaseapp.com/ *.eu.ngrok.io *.web.app *.google-analytics.com *.googleapis.com https://fonts.googleapis.com/ https://fonts.gstatic.com/ www.google.com *.google.com *.google.hu *.googletagmanager.com *.sentry.io *.gstatic.com *.dicebear.com *.doubleclick.net *.googlesyndication.com binaries.webex.com *.buysellads.net *.carbonads.net *.carbonads.com  data:;font-src 'self' 'unsafe-inline' fonts.gstatic.com;style-src 'self' 'unsafe-inline' fonts.googleapis.com;frame-ancestors 'self' *.zoom.us *.zoom.com *.microsoft.com *.microsoft.us *.office.com *.office.net *.webex.com *.cisco.com"
            },
            {
              "key": "Referrer-Policy",
              "value": "strict-origin-when-cross-origin"
            },
            {
              "key": "Strict-Transport-Security",
              "value": "max-age=31536000; includeSubDomains; preload"
            }
          ]
        },
        {
          "source": "/**",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "no-cache, no-store, must-revalidate"
            }
          ]
        },
        {
          "source": "**/*.@(jpg|jpeg|gif|png|svg|webp|js|css|eot|otf|ttf|ttc|woff|woff2|font.css)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=604800"
            }
          ]
        }
      ]
    }
  ],
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 6001
    },
    "ui": {
      "enabled": true
    },
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    },
    "storage": {
      "port": 9199
    }
  },
  "firestore": {
    "rules": "firestore.rules"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "extensions": {
    "firestore-stripe-payments": "stripe/firestore-stripe-payments@0.3.2"
  }
}

{
  "hosting": [
    {
      "target": "estimator",
      "public": "dist/estimator/browser",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "trailingSlash": false,
      "rewrites": [
        {
          "source": "/features",
          "destination": "/features/index.html"
        },
        {
          "source": "/",
          "destination": "/index.html"
        },
        {
          "source": "**",
          "destination": "/index.original.html"
        }
      ]
    }
  ],
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  }
}

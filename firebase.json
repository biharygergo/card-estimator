{
  "hosting": [
    {
      "target": "estimator",
      "public": "dist/estimator/browser",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "trailingSlash": false,
      "rewrites": [
        {
          "source": "/api/zoomHome",
          "function": "zoomHome",
          "region": "us-central1"
        },
        {
          "source": "/api/uninstallZoomApp",
          "function": "uninstallZoomApp",
          "region": "us-central1"
        },
        {
          "source": "/api/installZoomApp",
          "function": "installZoomApp",
          "region": "us-central1"
        },
        {
          "source": "/api/authorizeZoomApp",
          "function": "authorizeZoomApp",
          "region": "us-central1"
        },
        {
          "source": "/zoomverify/verifyzoom",
          "destination": "/assets/verifyzoom.html"
        },
        {
          "source": "/zoomverify/verifyzoom.html",
          "destination": "/assets/verifyzoom.html"
        },
        {
          "source": "/",
          "destination": "/index.html"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "headers": [
        {
          "source": "**",
          "headers": [
            {
              "key": "X-Content-Type-Options",
              "value": "nosniff"
            },
            {
              "key": "Content-Security-Policy",
              "value": "default-src 'self' 'unsafe-inline' 'unsafe-eval' 'nonce-jafiansf83nasdfn38asdnf3' 'nonce-hsjdf73bfasdjfb33fbasjd' *.eu.ngrok.io *.web.app *.google-analytics.com *.googleapis.com https://fonts.googleapis.com/ https://fonts.gstatic.com/ www.google.com *.google.com *.googletagmanager.com *.sentry.io *.gstatic.com https://avatars.dicebear.com;font-src 'self' 'unsafe-inline' fonts.gstatic.com;style-src 'self' 'unsafe-inline' fonts.googleapis.com"
            },
            {
              "key": "Referrer-Policy",
              "value": "strict-origin-when-cross-origin"
            },
            {
              "key": "Strict-Transport-Security",
              "value": "max-age=31536000; includeSubDomains; preload"
            }
          ]
        }
      ]
    }
  ],
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true
    }
  }
}

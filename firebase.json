{
  "hosting": [
    {
      "target": "estimator",
      "public": "dist/estimator/browser",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "trailingSlash": false,
      "rewrites": [
        {
          "source": "/features",
          "destination": "/features/index.html"
        },
        {
          "source": "/",
          "destination": "/index.html"
        },
        {
          "source": "**",
          "destination": "/index.original.html"
        }
      ],
      "headers": [
        {
          "source": "**",
          "headers": [
            {
              "key": "X-Content-Type-Options",
              "value": "nosniff"
            },
            {
              "key": "Content-Security-Policy",
              "value": "default-src 'self' 'unsafe-inline' 'unsafe-eval' *.web.app *.google-analytics.com *.googleapis.com *.google.com *.googletagmanager.com *.googlesyndication.com *.googleadservices.com *.doubleclick.net *.google.hu *.sentry.io *.gstatic.com *.dicebear.com;"
            },
            {
              "key": "Referrer-Policy",
              "value": "strict-origin-when-cross-origin"
            }
          ]
        }
      ]
    }
  ],
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  }
}
